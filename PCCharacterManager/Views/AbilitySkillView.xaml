<UserControl x:Class="PCCharacterManager.Views.AbilitySkillView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCCharacterManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200" MinWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition MinWidth="30" MaxWidth="30"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--#region Name-->
        <TextBlock Style="{StaticResource h4}" Text="{Binding Name, FallbackValue=value}" 
                   Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="1"/>
        <!--#endregion-->
        <!--#region Score-->

        <TextBlock Style="{StaticResource h4}" Text="{Binding Score, FallbackValue=3}" 
                   Margin="10,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Center"
                   Grid.Column="1"/>
        <!--#endregion-->

    </Grid>
</UserControl>
