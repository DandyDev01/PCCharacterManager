<UserControl x:Class="PCCharacterManager.Views.SpellItemEditableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCCharacterManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600"
             Padding="20"
             BorderThickness="0"
             MaxWidth="540" MinWidth="100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!--#region Name-->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
                   Style="{DynamicResource spellItemName}"
                   Visibility="{Binding IsDisplayMode, Converter={StaticResource IsEditConverter}}" 
                   Text="{Binding Name, FallbackValue=Name}"/>
        <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
                 Visibility="{Binding IsEditMode, Converter={StaticResource IsEditConverter}}"  
                   Text="{Binding Name, FallbackValue=Name}"/>
        <!--#endregion-->
        <!--#region Level-->
        <TextBlock Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2"
                   Style="{DynamicResource spellItemAttributeTitle}"
                   Visibility="{Binding IsDisplayMode, Converter={StaticResource IsEditConverter}}" 
                   ToolTip="Spell Level"
                   Text="{Binding Level, FallbackValue=1}"/>
        <TextBox Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2"
                 Visibility="{Binding IsEditMode, Converter={StaticResource IsEditConverter}}"  
                   Text="{Binding Level, FallbackValue=Name}"/>
        <!--#endregion-->
        <!--#region Casting Time-->
        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                   Style="{DynamicResource spellItemAttributeTitle}"
                   Text="Casting Time"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                   Style="{DynamicResource h4}"
                   Visibility="{Binding IsDisplayMode, Converter={StaticResource IsEditConverter}}" 
                   Text="{Binding CastingTime, FallbackValue=1_round}"/>
        <TextBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                 Visibility="{Binding IsEditMode, Converter={StaticResource IsEditConverter}}"  
                   Text="{Binding CastingTime, FallbackValue=Name}"/>
        <!--#endregion-->
        <!--#region Range / area-->
        <TextBlock Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" 
                   Style="{DynamicResource spellItemAttributeTitle}"
                   Text="Range / Area"/>
        <TextBlock Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" 
                   Style="{DynamicResource h4}"
                   Visibility="{Binding IsDisplayMode, Converter={StaticResource IsEditConverter}}" 
                   Text="{Binding Range_Area, FallbackValue=Self}"/>
        <TextBox Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" 
                 Visibility="{Binding IsEditMode, Converter={StaticResource IsEditConverter}}"  
                   Text="{Binding Range_Area, FallbackValue=Name}"/>
        <!--#endregion-->
        <!--#region Saves-->
        <TextBlock Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" 
                   Style="{DynamicResource spellItemAttributeTitle}"
                   Text="Saves"/>
        <TextBlock Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" 
                   Style="{DynamicResource h4}"
                   Visibility="{Binding IsDisplayMode, Converter={StaticResource IsEditConverter}}" 
                   Text="{Binding Attack_Save, FallbackValue=none}"/>
        <TextBox Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" 
                 Visibility="{Binding IsEditMode, Converter={StaticResource IsEditConverter}}"  
                   Text="{Binding Attack_Save, FallbackValue=Name}"/>
        <!--#endregion-->
        <!--#region School-->
        <TextBlock Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2"
                   Style="{DynamicResource spellItemAttributeTitle}"
                   Text="School"/>
        <TextBlock Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="2" 
                   Style="{DynamicResource h4}"
                   Text="{Binding School, FallbackValue=Abjuration}"/>
        <!--#endregion-->
        <!--#region Duration-->
        <TextBlock Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" 
                   Style="{DynamicResource spellItemAttributeTitle}"
                   Text="Duration"/>
        <TextBlock Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" 
                   Style="{DynamicResource h4}"
                   Visibility="{Binding IsDisplayMode, Converter={StaticResource IsEditConverter}}" 
                   Text="{Binding Duration, FallbackValue=1}"/>
        <TextBox Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" 
                 Visibility="{Binding IsEditMode, Converter={StaticResource IsEditConverter}}"  
                   Text="{Binding Duration, FallbackValue=Name}"/>
        <!--#endregion-->
        <!--#region Dmg/effect-->
        <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                   Style="{DynamicResource spellItemAttributeTitle}"
                   Text="Damage/Effect"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                   Style="{DynamicResource h4}"
                   Visibility="{Binding IsDisplayMode, Converter={StaticResource IsEditConverter}}" 
                   Text="{Binding Damage_Effect, FallbackValue=Fire}"/>
        <TextBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                 Visibility="{Binding IsEditMode, Converter={StaticResource IsEditConverter}}"  
                   Text="{Binding Damage_Effect, FallbackValue=Name}"/>
        <!--#endregion-->
        <!--#region Components-->
        <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                   Style="{DynamicResource spellItemAttributeTitle}"
                   Visibility="{Binding IsDisplayMode, Converter={StaticResource IsEditConverter}}" 
                   ToolTip="Spell Components"
                   Text="Components"/>
        <TextBlock Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" 
                   Visibility="{Binding IsDisplayMode, Converter={StaticResource IsEditConverter}}" 
                   ToolTip="Spell Components"
                   Text="SVG"/>
        <TextBox Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                 Visibility="{Binding IsEditMode, Converter={StaticResource IsEditConverter}}"  
                 Text="{Binding Name, FallbackValue=Name}"/>
        <!--#endregion-->
        <!--#region Description-->
        <Border Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="6" Grid.RowSpan="1"
                BorderBrush="{DynamicResource LightText}"
                BorderThickness="1"
                Padding="5">
            <TextBlock Style="{DynamicResource spellItemDescription}"
                       Visibility="{Binding IsDisplayMode, Converter={StaticResource IsEditConverter}}" 
                       Text="{Binding Desc, FallbackValue=info}"/>
        </Border>

        <TextBox Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="6" Grid.RowSpan="1"
                 Style="{DynamicResource Document}"
                 Visibility="{Binding IsEditMode, Converter={StaticResource IsEditConverter}}"
                 Text="{Binding Desc, FallbackValue=Name}"/>
        <!--#endregion-->
        <Button Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="8"
                Content="Prepare" 
                Command="{Binding PrepareCommand}" 
                Visibility="{Binding IsPrepared, Converter={StaticResource InverseBoolConverter}}"/>
    </Grid>
</UserControl>
