<UserControl x:Class="PCCharacterManager.Views.CharacterInventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCCharacterManager.Views"
             xmlns:v="clr-namespace:PCCharacterManager.Views"
             mc:Ignorable="d" 
             Background="{StaticResource ViewBackgroundColor}"
             d:DesignHeight="1080" d:DesignWidth="1920">
    <UserControl.InputBindings>
        <KeyBinding Modifiers="Shift" Key="Tab" Command="{Binding NextFilterCommand}"/>
    </UserControl.InputBindings>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="13" Grid.RowSpan="1">
            <MenuItem Header="Add Item" Command="{Binding AddItemCommand}"/>
            <MenuItem Header="Remove Item" Command="{Binding RemoveItemCommand}"/>
            <TextBox x:Name="searchBox"
                     Text="{Binding SearchTerm, FallbackValue=search, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource Search}"/>
            <CheckBox ToolTip="Show Hidden Properties of selected item?"
                      IsChecked="{Binding ShowHiddenProperties}"/>
            <ComboBox ItemsSource="{Binding Filters}" 
                      SelectedIndex="2" 
                      SelectedItem="{Binding SelectedFilter}"/>
        </Menu>

        <ListView Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="6" Grid.RowSpan="12" 
                  ItemsSource="{Binding ItemsCollectionView}"
                  SelectedIndex="0"
                  SelectedItem="{Binding SelectedItem}">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add Item" Command="{Binding AddItemCommand}"/>
                    <MenuItem Header="Remove Item" Command="{Binding RemoveItemCommand}"
                              IsEnabled="{Binding SelectedItem, Converter={StaticResource NullToEnabledConverter}}"/>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <v:ItemDisplayView/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!--#region Selected Item-->
        <TextBox Grid.Row="1" Grid.Column="6" Grid.RowSpan="1" Grid.ColumnSpan="3"
                 Text="{Binding SelectedItem.DisplayName, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBox Grid.Row="1" Grid.Column="9" Grid.RowSpan="1" Grid.ColumnSpan="1"
                 Text="{Binding SelectedItem.DisplayQuantity, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBox Grid.Row="2" Grid.Column="6" Grid.RowSpan="6" Grid.ColumnSpan="3"
                 Style="{StaticResource Document}"
                 Text="{Binding SelectedItem.DisplayDesc, UpdateSourceTrigger=PropertyChanged}"/>

        <!--#region Properties-->
        <Button Grid.Column="10" Grid.Row="1" 
                Content="Add Property"
                Command="{Binding AddPropertyCommand}"/>
        <Button Grid.Column="11" Grid.Row="1" Grid.ColumnSpan="2"
                Content="Remove Property"
                Command="{Binding RemovePropertyCommand}"/>

        <ListView Grid.Row="2" Grid.Column="9" Grid.ColumnSpan="4" Grid.RowSpan="6"
                  ItemsSource="{Binding PropertiesToDisplay}" 
                  SelectedItem="{Binding SelectedProperty}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <v:PropertyEditableView/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!--#endregion-->
        <!--#endregion-->
    </Grid>
</UserControl>
