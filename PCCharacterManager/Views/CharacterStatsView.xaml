<UserControl x:Class="PCCharacterManager.Views.CharacterStatsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCCharacterManager.Views"
             xmlns:v="clr-namespace:PCCharacterManager.Views"
             mc:Ignorable="d" 
             Background="{StaticResource ViewBackgroundColor}"
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu Grid.ColumnSpan="12">
            <MenuItem Header="Edit character"
                      Command="{Binding EditCharacterCommand}"/>
        </Menu>

        <ContentControl Grid.Column="0"  Grid.Row="1" Grid.ColumnSpan="6" Grid.RowSpan="8">
            <v:CharacterInfoView DataContext="{Binding SelectedCharacter}"/>
        </ContentControl>

        <DockPanel Grid.Column="6" Grid.Row="4" Grid.ColumnSpan="6" Grid.RowSpan="4" >
            <ContentControl>
                <v:CharacterAbilitiesView DataContext="{Binding SelectedCharacter}"/>
            </ContentControl>
        </DockPanel>
    </Grid>
</UserControl>
