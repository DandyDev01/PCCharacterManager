<UserControl x:Class="PCCharacterManager.Views.CharacterAbilitiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCCharacterManager.Views"
             xmlns:v="clr-namespace:PCCharacterManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="540" d:DesignWidth="960">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--#region Column 1-->
        <DockPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="1" >
            <ContentControl>
                <v:AbilityView DataContext="{Binding Abilities[0]}"/>
            </ContentControl>
        </DockPanel>
        <DockPanel Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="1" >
            <ContentControl>
                <v:AbilityView DataContext="{Binding Abilities[1]}"/>
            </ContentControl>
        </DockPanel>
        <DockPanel Grid.Column="4" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="1" >
            <ContentControl>
                <v:AbilityView DataContext="{Binding Abilities[2]}"/>
            </ContentControl>
        </DockPanel>
        <!--#endregion-->
        <!--#region Column 2-->
        <DockPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="1" >
            <ContentControl>
                <v:AbilityView DataContext="{Binding Abilities[3]}"/>
            </ContentControl>
        </DockPanel>
        <DockPanel Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="1" >
            <ContentControl>
                <v:AbilityView DataContext="{Binding Abilities[4]}"/>
            </ContentControl>
        </DockPanel>
        <DockPanel Grid.Column="4" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="1" >
            <ContentControl>
                <v:AbilityView DataContext="{Binding Abilities[5]}"/>
            </ContentControl>
        </DockPanel>
        <!--#endregion-->
    </Grid>
</UserControl>
