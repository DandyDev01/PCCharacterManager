<UserControl
    x:Class="PCCharacterManager.Views.NoteDisplayView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PCCharacterManager.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MaxHeight="250"
    d:DesignHeight="150"
    d:DesignWidth="300"
    Background="{DynamicResource 2}"
    BorderThickness="2"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border BorderBrush="{DynamicResource 5}" BorderThickness="0,3,0,1" />
        <Label
            Grid.Row="0"
            Margin="0,10,0,0"
            Content="{Binding Title}"
            FontSize="21" />

        <Border
            Grid.Row="7"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="6"
            Padding="5"
            BorderBrush="{DynamicResource LightText}"
            BorderThickness="1">
            <TextBlock
                Style="{DynamicResource h4}"
                Text="{Binding Notes, FallbackValue=info}"
                TextWrapping="WrapWithOverflow" />
        </Border>

    </Grid>
</UserControl>
