<UserControl x:Class="PCCharacterManager.Views.CharacterNoteBookView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCCharacterManager.Views"
             xmlns:v="clr-namespace:PCCharacterManager.Views"
             xmlns:m="clr-namespace:PCCharacterManager.Models"
             mc:Ignorable="d" 
             Background="{DynamicResource 1}"
             d:DesignHeight="1080" d:DesignWidth="1920">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="New Note" Icon="{DynamicResource Add_Icon}" InputGestureText="Ctrl+LShift+N" Command="{Binding AddNoteCommand}"/>
            <MenuItem Header="Delete Note" Icon="{DynamicResource Move_To_Trash_Icon}" InputGestureText="Ctrl+LShift+D" Command="{Binding DeleteNoteCommand}"/>
            <MenuItem Header="Edit Section Title" Icon="{DynamicResource Edit_Icon}" InputGestureText="N/A" Command="{Binding EditSectionTitleCommand}"/>
        </ContextMenu>
    </UserControl.ContextMenu>
    <UserControl.InputBindings>
        <KeyBinding Modifiers="Ctrl+Shift" Key="N" Command="{Binding AddNoteCommand}"/>
        <KeyBinding Modifiers="Ctrl+Shift" Key="D" Command="{Binding DeleteNoteCommand}"/>
        <KeyBinding Modifiers="Ctrl" Key="F" Command="{Binding FindInNoteCommand}"/>
    </UserControl.InputBindings>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="600"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!--<Label Grid.Column="3" Grid.Row="0" Content="Notes"/>-->
