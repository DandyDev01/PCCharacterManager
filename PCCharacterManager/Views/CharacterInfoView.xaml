<UserControl x:Class="PCCharacterManager.Views.CharacterInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCCharacterManager.Views"
             xmlns:v="clr-namespace:PCCharacterManager.Views"
             mc:Ignorable="d" 
             Background="{StaticResource ViewBackgroundColor}"
             d:DesignHeight="930" d:DesignWidth="950">
    <ScrollViewer>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <!--5-->
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="auto"/>
                <!--10-->
                <RowDefinition Height="auto"/>
                <RowDefinition Height="439"/>
            </Grid.RowDefinitions>

            <!--#region Name and Age-->
            <TextBox Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="1"
                     Text="{Binding SelectedCharacter.Name, FallbackValue=Name, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBox Grid.Column="3" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="1"
                     ToolTip="Age"
                     Text="{Binding SelectedCharacter.Race.Age, FallbackValue=20, UpdateSourceTrigger=PropertyChanged}"/>
            <!--#endregion-->

            <!--#region Alignment and Size-->
            <TextBlock Grid.Row="0" Grid.Column="5" Grid.ColumnSpan="2" Style="{StaticResource h3}"
                       Text="{Binding SelectedCharacter.Alignment,FallbackValue=good}"/>

            <TextBlock Grid.Row="0" Grid.Column="7" Grid.ColumnSpan="2" Style="{StaticResource h3}"
                       Text="{Binding SelectedCharacter.Size, FallbackValue=small}"/>
            <!--#endregion-->

            <!--#region Hit Points-->
            <TextBlock Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource h3}"
                       ToolTip="{Binding SelectedCharacter.Health.MaxHealth}"
                       Text="Health"/>
            <TextBox Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="1"
                     ToolTip="Current Hit Points"
                     Text="{Binding SelectedCharacter.Health.CurrHealth, FallbackValue=22, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="1"
                     ToolTip="Temporary Hit Points"
                     Text="{Binding SelectedCharacter.Health.TempHitPoints, FallbackValue=22, UpdateSourceTrigger=PropertyChanged}"/>
            <!--#endregion-->

            <!--#region EXP-->
            <TextBlock Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="1" Grid.RowSpan="1"
                       Text="EXP"/>
            <TextBox Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="1" Grid.RowSpan="1"
                     Text="{Binding SelectedCharacter.Level.ExperiencePoints, FallbackValue=400, UpdateSourceTrigger=PropertyChanged}" />
            <!--#endregion-->

            <!--#region Armor Class-->
            <TextBlock Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="1" Grid.RowSpan="1"
                     Text="AC"/>
            <TextBox Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="1" Grid.RowSpan="1"
                     Text="{Binding SelectedCharacter.ArmorClass.ArmorClassValue, FallbackValue=1, UpdateSourceTrigger=PropertyChanged}"/>
            <!--#endregion-->

            <!--#region Initiative-->
            <TextBlock Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="1" 
                       ToolTip="your Dex Mod"
                       Text="Initiative"/>
            <TextBox Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="1" 
                     ToolTip="your Dex Mod"
                     Text="{Binding SelectedCharacter.Initiative, FallbackValue=3, UpdateSourceTrigger=PropertyChanged}"/>
            <!--#endregion-->

            <!--#region Passive Skills-->
            <TextBlock Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="1" 
                       ToolTip="Passive Perception"
                       Text="Passive Perc"/>
            <TextBox Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="1" 
                       ToolTip="10 + skill score (+ 5 if you have advantage w/ skill checks)"
                       Text="{Binding SelectedCharacter.PassivePerception, FallbackValue=3, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="1" 
                       ToolTip="Passive Insight"
                       Text="Passive Insi"/>
            <TextBox Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="1" 
                       ToolTip="10 + skill score (+ 5 if you have advantage w/ skill checks)"
                       Text="{Binding SelectedCharacter.PassiveInsight, FallbackValue=3, UpdateSourceTrigger=PropertyChanged}"/>
            <!--#endregion-->

            <!--#region ProfBonus-->
            <TextBlock Grid.Column="2" Grid.Row="5" Grid.ColumnSpan="1"
                       Text="profBonus"/>
            <TextBlock Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="1"
                       Text="{Binding SelectedCharacter.Level.ProficiencyBonus, FallbackValue=3}"/>
            <!--#endregion-->

            <!--#region Level-->
            <TextBlock Grid.Column="3" Grid.Row="5" Grid.ColumnSpan="1" Grid.RowSpan="1"
                       Text="Level"/>
            <TextBlock Grid.Column="3" Grid.Row="6" Grid.ColumnSpan="1" Grid.RowSpan="1"
                       Text="{Binding SelectedCharacter.Level.Level, FallbackValue=1, UpdateSourceTrigger=PropertyChanged}" Margin="10"/>
            <!--#endregion-->

            <!--#region Class and Background-->
            <TextBlock Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="2"
                       ToolTip="Background"
                       Text="{Binding SelectedCharacter.Background, FallbackValue=Investigator}"/>

            <TextBlock Grid.Row="9" Grid.Column="2" Grid.ColumnSpan="2"
                       ToolTip="Class"
                       Text="{Binding SelectedCharacter.CharacterClass.Name, FallbackValue=Barbarian}"/>

            <TextBlock Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="1"
                       Text="Hit Die"/>
            <TextBlock Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="1"
                       ToolTip="Used for calculating Hit Points"
                       Text="{Binding SelectedCharacter.CharacterClass.HitDie, FallbackValue=D6}"/>

            <TextBlock Grid.Column="1" Grid.Row="5"  Grid.ColumnSpan="1"
                       Text="Class Level"/>
            <TextBlock Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="1"
                       ToolTip="Class"
                       Text="{Binding SelectedCharacter.CharacterClass.Level.Level, FallbackValue=1}"/>
            <!--#endregion-->

            <!--#region Race and Race Varient-->
            <TextBlock Grid.Column="0" Grid.Row="8" Grid.ColumnSpan="2"
                       ToolTip="Race Bariant"
                       Text="{Binding SelectedCharacter.Race.RaceVariant.Name, FallbackValue=Blue}"/>

            <TextBlock Grid.Column="2" Grid.Row="8" Grid.ColumnSpan="2"
                       ToolTip="Race"
                       Text="{Binding SelectedCharacter.Race.Name, FallbackValue=DragonBorn}"/>
            <!--#endregion-->

            <!--#region Class, Race, Race Variant features-->
            <TextBlock Grid.Column="0" Grid.Row="11" Grid.ColumnSpan="3" Grid.RowSpan="1"
                       Text="Class Features"/>
            <ListView Grid.Column="0" Grid.Row="12" Grid.ColumnSpan="3" Grid.RowSpan="1"
                      SelectedItem="{Binding SelectedClassFeature}"
                      ItemsSource="{Binding SelectedCharacter.CharacterClass.Features}">
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="{Binding SelectedClassFeatureName}" Command="{Binding RemoveClassFeatureCommand}"/>
                        <MenuItem Header="Edit selected" Command="{Binding EditClassFeatureCommand}"/>
                        <MenuItem Header="Add class feature" Command="{Binding AddClassFeatureCommand}"/>
                    </ContextMenu>
                </ListView.ContextMenu>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <v:PropertyDisplayView/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <TextBlock Grid.Column="3" Grid.Row="11" Grid.ColumnSpan="3" Grid.RowSpan="1"
                       Text="Race Features"/>
            <ListView Grid.Column="3" Grid.Row="12" Grid.ColumnSpan="3" Grid.RowSpan="1"
                      SelectedItem="{Binding SelectedRaceFeature}"
                      ItemsSource="{Binding SelectedCharacter.Race.Features}" >
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="{Binding SelectedRaceFeatureName}" Command="{Binding RemoveRaceFeatureCommand}"/>
                        <MenuItem Header="Edit selected" Command="{Binding EditRaceFeatureCommand}"/>
                        <MenuItem Header="Add Race Feature" Command="{Binding AddRaceFeatureCommand}"/>
                    </ContextMenu>
                </ListView.ContextMenu>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <v:PropertyDisplayView/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <TextBlock Grid.Column="6" Grid.Row="11" Grid.ColumnSpan="3" Grid.RowSpan="1"
                       Text="Race Variant Features"/>
            <ListView Grid.Column="6" Grid.Row="12" Grid.ColumnSpan="3" Grid.RowSpan="1"
                      ItemsSource="{Binding SelectedCharacter.Race.RaceVariant.Properties}" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <v:PropertyDisplayView/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--#endregion-->

            <!--#region OtherProfs-->
            <Grid Grid.Column="4" Grid.Row="1" Grid.ColumnSpan="5" Grid.RowSpan="10" MinHeight="400">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="1"
                           Text="Languages"/>
                <ListView Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="1" Grid.RowSpan="1"
                          SelectedIndex="0"
                          SelectedItem="{Binding SelectedLanguage}"
                          ItemsSource="{Binding SelectedCharacter.Languages}">
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="{Binding SelectedLanguage}" Command="{Binding RemoveLanguageCommand}"/>
                            <MenuItem Header="Add Language" Command="{Binding AddLanguageCommand}"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                </ListView>

                <TextBlock Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="1" 
                           Text="Movement"/>
                <ListView Grid.Column="1" Grid.Row="1"  Grid.ColumnSpan="1" Grid.RowSpan="1"
                          SelectedIndex="0"
                          SelectedItem="{Binding SelectedMovementType}"
                          ItemsSource="{Binding SelectedCharacter.MovementTypes_Speeds}">
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="{Binding SelectedMovementType}" Command="{Binding RemoveMovementTypeCommand}"/>
                            <MenuItem Header="Add Movement" Command="{Binding AddMovementTypeCommand}"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <v:PropertyDisplayHorizontalView/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <TextBlock Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="1" 
                           Text="Other Profs"/>
                <ListView Grid.Column="2" Grid.Row="1"  Grid.ColumnSpan="1" Grid.RowSpan="1"
                          SelectedIndex="0"
                          SelectedItem="{Binding SelectedOtherProf}"
                          ItemsSource="{Binding SelectedCharacter.OtherProficiences}">
                    <ListView.ContextMenu>
                             <ContextMenu>
                                <MenuItem Header="{Binding SelectedOtherProf}" Command="{Binding RemoveOtherProfCommand}"/>
                                <MenuItem Header="Add Other Prof" Command="{Binding AddOtherProfCommand}"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                </ListView>

                <TextBlock Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="1" Grid.RowSpan="1"
                           Text="Weapon Profs"/>
                <ListView Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="1" Grid.RowSpan="1"
                          SelectedIndex="0"
                          SelectedItem="{Binding SelectedWeaponProf}"
                          ItemsSource="{Binding SelectedCharacter.WeaponProficiencies}" >
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="{Binding SelectedWeaponProf}" Command="{Binding RemoveWeaponProfCommand}"/>
                            <MenuItem Header="Add WeaponProf" Command="{Binding AddWeaponProfCommand}"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                </ListView>

                <TextBlock Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="1" 
                           Text="Armor Profs"/>
                <ListView Grid.Column="1" Grid.Row="3"  Grid.ColumnSpan="1" Grid.RowSpan="1"
                          SelectedIndex="0"
                          SelectedItem="{Binding SelectedArmorProf}"
                          ItemsSource="{Binding SelectedCharacter.ArmorProficiencies}">
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="{Binding SelectedArmorProf}" Command="{Binding RemoveArmorProfCommand}"/>
                            <MenuItem Header="Add ArmorProf" Command="{Binding AddArmorProfCommand}"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                </ListView>

                <TextBlock Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="1" Grid.RowSpan="1"
                           Text="Tool Profs"/>
                <ListView Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="1" Grid.RowSpan="1"
                          SelectedIndex="0"
                          SelectedItem="{Binding SelectedToolProf}"
                          ItemsSource="{Binding SelectedCharacter.ToolProficiences}">
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="{Binding SelectedToolProf}" Command="{Binding RemoveToolProfCommand}"/>
                            <MenuItem Header="Add ToolProf" Command="{Binding AddToolProfCommand}"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                </ListView>
            </Grid>
            <!--#endregion-->

        </Grid>
    </ScrollViewer>
</UserControl>
